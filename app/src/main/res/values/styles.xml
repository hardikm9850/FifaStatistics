<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="colorPrimaryDarkTranslucent">@color/colorPrimaryDarkTranslucent</item>
        <item name="colorPrimaryDarkTranslucenter">@color/colorPrimaryDarkTranslucenter</item>
        <item name="cardViewBackground">@color/cardViewBackground</item>
        <item name="cardViewHeaderBackground">@color/cardViewHeaderBackground</item>
        <item name="statOpponentColor">@color/statOpponentColor</item>
        <item name="android:windowContentTransitions">true</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.Settings" parent="AppTheme">
        <item name="preferenceTheme">@style/PreferenceThemeOverlay.v14.Material</item>
    </style>

    <!-- Cobalt theme -->
    <style name="AppTheme.Cobalt" parent="Theme.AppCompat.NoActionBar">
        <item name="colorPrimary">@color/colorPrimaryCob</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDarkCob</item>
        <item name="colorAccent">@color/colorAccentCob</item>
        <item name="colorPrimaryDarkTranslucent">@color/colorPrimaryDarkTranslucentCob</item>
        <item name="colorPrimaryDarkTranslucenter">@color/colorPrimaryDarkTranslucenterCob</item>
        <item name="cardViewBackground">@color/cardViewBackgroundCob</item>
        <item name="cardViewHeaderBackground">@color/cardViewHeaderBackgroundCob</item>
        <item name="statOpponentColor">@color/statOpponentColorCob</item>
        <item name="android:windowContentTransitions">true</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.Settings.Cobalt" parent="AppTheme.Cobalt">
        <item name="preferenceTheme">@style/PreferenceThemeOverlay.v14.Material</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <!-- Dark Buttons -->
    <style name="ThemeOverlay.MyDarkButton" parent="ThemeOverlay.AppCompat.Dark">
        <item name="colorButtonNormal">@color/colorPrimary</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

    <!-- Text -->
    <style name="text_tiny_grey" parent="TextAppearance.AppCompat">
        <item name="android:textSize">@dimen/text_tiny</item>
        <item name="android:textColor">@android:color/secondary_text_dark</item>
    </style>

    <style name="text_tiny_bold_main" parent="text_tiny_grey">
        <item name="android:textColor">@color/text_main</item>
        <item name="android:fontFamily">sans-serif-medium</item>
    </style>

    <style name="text_small" parent="TextAppearance.AppCompat">
        <item name="android:textSize">@dimen/text_small</item>
    </style>

    <style name="text_medium" parent="TextAppearance.AppCompat">
        <item name="android:textSize">22sp</item>
    </style>

    <style name="text_large" parent="TextAppearance.AppCompat">
        <item name="android:textSize">35sp</item>
    </style>

    <style name="text_bold_small" parent="text_small">
        <item name="android:fontFamily">sans-serif-medium</item>
    </style>

    <style name="text_white_small" parent="text_small">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="text_bold_white_small" parent="text_small">
        <item name="android:textStyle">bold</item>
    </style>

    <style name="text_bold_medium" parent="text_medium">
        <item name="android:textStyle">bold</item>
    </style>

    <style name="text_white_medium" parent="text_medium">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="text_grey_medium" parent="text_medium">
        <item name="android:textColor">@android:color/secondary_text_dark</item>
    </style>

    <style name="text_grey_small" parent="text_small">
        <item name="android:textColor">@android:color/secondary_text_dark</item>
    </style>

    <style name="text_bold_grey_small" parent="text_bold_small">
        <item name="android:textColor">@android:color/secondary_text_dark</item>
    </style>

    <style name="text_error" parent="text_small">
        <item name="android:textColor">@color/error</item>
    </style>

    <style name="GamePagePill">
        <item name="android:textColor">@drawable/text_color_selector</item>
        <item name="android:textAppearance">@style/text_bold_small</item>
        <item name="android:maxLines">1</item>
        <item name="android:background">@drawable/pill_selector</item>
        <item name="android:minWidth">0dp</item>
        <item name="android:minHeight">0dp</item>
        <item name="android:paddingStart">12dp</item>
        <item name="android:paddingEnd">12dp</item>
        <item name="android:paddingTop">2dp</item>
        <item name="android:paddingBottom">2dp</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="CardViewStyle" parent="CardView">
        <item name="android:layout_marginStart">@dimen/activity_horizontal_margin</item>
        <item name="android:layout_marginEnd">@dimen/activity_horizontal_margin</item>
        <item name="android:layout_marginBottom">@dimen/activity_horizontal_margin</item>
        <item name="cardCornerRadius">2dp</item>
        <item name="cardBackgroundColor">?cardViewBackground</item>
    </style>

    <style name="CardViewHeaderText">
        <item name="android:layout_marginTop">5dp</item>
        <item name="android:layout_marginBottom">5dp</item>
        <item name="android:textAppearance">@style/text_bold_grey_small</item>
    </style>

    <style name="Divider">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:background">?cardViewHeaderBackground</item>
    </style>

</resources>
