<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="colorPrimaryDarkTranslucent">@color/colorPrimaryDarkTranslucent</item>
        <item name="colorPrimaryDarkTranslucenter">@color/colorPrimaryDarkTranslucenter</item>
        <item name="colorMenuItem">@color/colorMenuItem</item>
        <item name="colorTextMain">@color/textColorPrimary</item>
        <item name="colorListItem">@color/colorPrimaryDark</item>
        <item name="colorListItemTranslucent">@color/colorPrimaryDarkTranslucent</item>
        <item name="cardViewBackground">@color/cardViewBackground</item>
        <item name="cardViewHeaderBackground">@color/cardViewHeaderBackground</item>
        <item name="statOpponentColor">@color/statOpponentColor</item>
        <item name="android:textColorPrimary">@color/textColorPrimary</item>
        <item name="android:textColorSecondary">@color/textColorSecondary</item>
        <item name="android:windowContentTransitions">true</item>
        <item name="android:toolbarStyle">@style/AppTheme.Toolbar</item>
        <item name="android:windowLightStatusBar">false</item>
        <item name="preferenceTheme">@style/PreferenceThemeOverlay.v14.Material</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.Settings" parent="AppTheme.Cobalt">
        <item name="preferenceTheme">@style/PreferenceThemeOverlay.v14.Material</item>
    </style>

    <style name="AppTheme.Toolbar" parent="Theme.AppCompat.NoActionBar">
        <item name="android:textColorPrimary">@color/textColorPrimary</item>
        <item name="android:textColorSecondary">@color/textColorSecondary</item>
    </style>

    <!-- Cobalt theme -->
    <style name="AppTheme.Cobalt" parent="Theme.AppCompat.NoActionBar">
        <item name="colorPrimary">@color/colorPrimaryCob</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDarkCob</item>
        <item name="colorAccent">@color/colorAccentCob</item>
        <item name="colorPrimaryDarkTranslucent">@color/colorPrimaryDarkTranslucentCob</item>
        <item name="colorPrimaryDarkTranslucenter">@color/colorPrimaryDarkTranslucenterCob</item>
        <item name="colorMenuItem">@color/colorMenuItemCob</item>
        <item name="colorTextMain">@color/textColorPrimaryCob</item>
        <item name="colorListItem">@color/colorPrimaryDarkCob</item>
        <item name="colorListItemTranslucent">@color/colorPrimaryDarkTranslucent</item>
        <item name="cardViewBackground">@color/cardViewBackgroundCob</item>
        <item name="cardViewHeaderBackground">@color/cardViewHeaderBackgroundCob</item>
        <item name="statOpponentColor">@color/statOpponentColorCob</item>
        <item name="android:textColorPrimary">@color/textColorPrimaryCob</item>
        <item name="android:textColorSecondary">@color/textColorSecondaryCob</item>
        <item name="android:windowContentTransitions">true</item>
        <item name="android:toolbarStyle">@style/AppTheme.Toolbar.Cobalt</item>
        <item name="android:windowLightStatusBar">false</item>
        <item name="preferenceTheme">@style/PreferenceThemeOverlay.v14.Material</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.Toolbar.Cobalt" parent="Theme.AppCompat.NoActionBar">
        <item name="android:textColorPrimary">@color/textColorPrimaryCob</item>
        <item name="android:textColorSecondary">@color/textColorSecondaryCob</item>
    </style>

    <style name="AppTheme.Dialog.Cobalt" parent="Theme.AppCompat.Dialog">
        <item name="android:windowBackground">@color/blue</item>
    </style>

    <!-- Light Theme -->
    <style name="AppTheme.Light" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimaryLight</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDarkLight</item>
        <item name="colorAccent">@color/colorAccentLight</item>
        <item name="colorPrimaryDarkTranslucent">@color/colorPrimaryDarkTranslucentLight</item>
        <item name="colorPrimaryDarkTranslucenter">@color/colorPrimaryDarkTranslucenterLight</item>
        <item name="colorMenuItem">@color/colorMenuItemLight</item>
        <item name="colorTextMain">@color/textColorPrimaryLight</item>
        <item name="colorListItem">@color/colorPrimaryLight</item>
        <item name="colorListItemTranslucent">@color/colorPrimaryLightTranslucent</item>
        <item name="cardViewBackground">@color/cardViewBackgroundLight</item>
        <item name="cardViewHeaderBackground">@color/cardViewHeaderBackgroundLight</item>
        <item name="statOpponentColor">@color/statOpponentColorLight</item>
        <item name="android:textColorPrimary">@color/textColorPrimaryLight</item>
        <item name="android:textColorSecondary">@color/textColorSecondaryLight</item>
        <item name="android:windowContentTransitions">true</item>
        <item name="android:windowLightStatusBar">true</item>
        <item name="actionOverflowButtonStyle">@style/AppTheme.Overflow.Light</item>
        <item name="toolbarNavigationButtonStyle">@style/Toolbar.Button.Navigation.Tinted</item>
        <item name="preferenceTheme">@style/PreferenceThemeOverlay.v14.Material</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Toolbar.Button.Navigation.Tinted" parent="Widget.AppCompat.Toolbar.Button.Navigation">
        <item name="tint">@color/textColorPrimaryLight</item>
    </style>

    <style name="AppTheme.Overflow.Light" parent="Widget.AppCompat.ActionButton.Overflow">
        <item name="android:tint">@color/textColorPrimaryLight</item>
    </style>

    <style name="AppTheme.Toolbar.Light" parent="Theme.AppCompat.NoActionBar">
        <item name="android:textColorPrimary">@color/textColorPrimaryLight</item>
        <item name="android:textColorSecondary">@color/textColorSecondaryLight</item>
    </style>


    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <!-- Style for an Preference Entry -->
    <style name="AppPreference">
        <item name="android:layout">@layout/preference_material</item>
    </style>

    <!-- Style for a DialogPreference Entry -->
    <style name="AppPreference.DialogPreference">
        <item name="positiveButtonText">@android:string/ok</item>
        <item name="negativeButtonText">@android:string/cancel</item>
    </style>

    <!-- Dark Buttons -->
    <style name="ThemeOverlay.MyDarkButton" parent="ThemeOverlay.AppCompat.Dark">
        <item name="colorButtonNormal">@color/colorPrimary</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

    <!-- Text -->
    <style name="text_tiny_grey" parent="TextAppearance.AppCompat">
        <item name="android:textSize">@dimen/text_tiny</item>
        <item name="android:textColor">?android:textColorSecondary</item>
    </style>

    <style name="text_tiny_bold_main" parent="text_tiny_grey">
        <item name="android:textColor">?android:textColorPrimary</item>
        <item name="android:fontFamily">sans-serif-medium</item>
    </style>

    <style name="text_small" parent="TextAppearance.AppCompat">
        <item name="android:textSize">@dimen/text_small</item>
    </style>

    <style name="text_medium" parent="TextAppearance.AppCompat">
        <item name="android:textColor">?android:textColorPrimary</item>
        <item name="android:textSize">22sp</item>
    </style>

    <style name="text_large" parent="TextAppearance.AppCompat">
        <item name="android:textSize">35sp</item>
    </style>

    <style name="text_bold_small" parent="text_small">
        <item name="android:fontFamily">sans-serif-medium</item>
    </style>

    <style name="text_white_small" parent="text_small">
        <item name="android:textColor">?android:textColorPrimary</item>
    </style>

    <style name="text_bold_white_small" parent="text_small">
        <item name="android:textStyle">bold</item>
    </style>

    <style name="text_bold_medium" parent="text_medium">
        <item name="android:textStyle">bold</item>
    </style>

    <style name="text_white_medium" parent="text_medium">
        <item name="android:textColor">?android:textColorPrimary</item>
    </style>

    <style name="text_grey_medium" parent="text_medium">
        <item name="android:textColor">?android:textColorSecondary</item>
    </style>

    <style name="text_grey_small" parent="text_small">
        <item name="android:textColor">?android:textColorSecondary</item>
    </style>

    <style name="text_bold_grey_small" parent="text_bold_small">
        <item name="android:textColor">?android:textColorSecondary</item>
    </style>

    <style name="text_error" parent="text_small">
        <item name="android:textColor">@color/error</item>
    </style>

    <style name="GamePagePill">
        <item name="android:textColor">@drawable/text_color_selector</item>
        <item name="android:textAppearance">@style/text_bold_small</item>
        <item name="android:maxLines">1</item>
        <item name="android:background">@drawable/pill_selector</item>
        <item name="android:minWidth">0dp</item>
        <item name="android:minHeight">0dp</item>
        <item name="android:paddingStart">12dp</item>
        <item name="android:paddingEnd">12dp</item>
        <item name="android:paddingTop">2dp</item>
        <item name="android:paddingBottom">2dp</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="CardViewStyle" parent="CardView">
        <item name="android:layout_marginStart">@dimen/activity_horizontal_margin</item>
        <item name="android:layout_marginEnd">@dimen/activity_horizontal_margin</item>
        <item name="android:layout_marginBottom">@dimen/activity_horizontal_margin</item>
        <item name="cardCornerRadius">2dp</item>
        <item name="cardBackgroundColor">?cardViewBackground</item>
    </style>

    <style name="CardViewHeaderText">
        <item name="android:layout_marginTop">5dp</item>
        <item name="android:layout_marginBottom">5dp</item>
        <item name="android:textAppearance">@style/text_bold_grey_small</item>
    </style>

    <style name="Divider">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:background">?cardViewHeaderBackground</item>
    </style>

</resources>
