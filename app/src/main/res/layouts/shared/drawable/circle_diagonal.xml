<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:height="24dp" android:width="24dp" android:gravity="center">
        <shape xmlns:android="http://schemas.android.com/apk/res/android"
               android:shape="oval">

            <solid android:color="@color/circle_background"/>

        </shape>
    </item>

    <item android:height="27dp" android:width="4dp" android:gravity="center">
        <rotate
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:fromDegrees="45"
            android:toDegrees="0">
            <shape
                android:shape="rectangle">
                <solid android:color="@color/circle_background_cross" />

            </shape>
        </rotate>
    </item>

</layer-list>