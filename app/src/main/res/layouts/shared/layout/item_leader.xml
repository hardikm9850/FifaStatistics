<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
            name="leaderFor"
            type="com.example.kevin.fifastatistics.models.databasemodels.footballers.Leaders.Leader"/>
        <variable
            name="leaderAgainst"
            type="com.example.kevin.fifastatistics.models.databasemodels.footballers.Leaders.Leader"/>
        <variable
            name="title"
            type="String"/>
    </data>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/activity_horizontal_margin"
        android:layout_marginBottom="@dimen/activity_horizontal_margin">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/leader_image_for"
            android:layout_width="@dimen/leader_image_size"
            android:layout_height="@dimen/leader_image_size"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="@dimen/activity_horizontal_margin"
            app:imageUrl="@{leaderFor.player.headshotImgUrl}"
            app:civ_circle_background_color="@color/circle_background"/>

        <TextView
            android:id="@+id/leader_name_for"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@id/leader_image_for"
            android:layout_alignParentTop="true"
            android:textAppearance="@style/text_white_small"
            android:text="@{leaderFor.player.name}"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@id/leader_image_for"
            android:layout_alignParentBottom="true"
            android:textAppearance="@style/text_bold_white_small"
            android:text="@{leaderFor.valueString}"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_marginStart="@dimen/activity_horizontal_margin"
            android:layout_marginEnd="@dimen/activity_horizontal_margin"
            android:gravity="center"
            android:textAppearance="@style/text_grey_small"
            android:text="@{title}"/>

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/leader_image_against"
            android:layout_width="@dimen/leader_image_size"
            android:layout_height="@dimen/leader_image_size"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginStart="@dimen/activity_horizontal_margin"
            app:imageUrl="@{leaderAgainst.player.headshotImgUrl}"
            app:civ_circle_background_color="@color/circle_background"/>

        <TextView
            android:id="@+id/leader_name_against"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toStartOf="@id/leader_image_against"
            android:layout_alignParentTop="true"
            android:textAppearance="@style/text_white_small"
            android:text="@{leaderAgainst.player.name}"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toStartOf="@id/leader_image_against"
            android:layout_alignParentBottom="true"
            android:textAppearance="@style/text_bold_white_small"
            android:text="@{leaderAgainst.valueString}"/>

    </RelativeLayout>

</layout>