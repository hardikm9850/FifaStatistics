<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
            name="date"
            type="String" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:slm_headerDisplay="inline|sticky"
        app:slm_isHeader="true">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingStart="@dimen/activity_vertical_margin"
            android:paddingEnd="@dimen/activity_vertical_margin"
            android:paddingTop="@dimen/date_header_vertical_margin"
            android:textAppearance="@style/text_bold_grey_small"
            android:text="@{date}"
            android:background="?colorPrimaryDark" />

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/date_header_gradient_height"
            android:background="@drawable/background_gradient" />

    </LinearLayout>

</layout>