<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
            name="imageUrl"
            type="String"/>
        <variable
            name="color"
            type="Integer"/>
    </data>

    <com.example.kevin.fifastatistics.views.RoundedFrameLayout
        android:layout_width="50dp"
        android:layout_height="65dp"
        app:radiusBottomRight="@dimen/headshot_radius"
        app:radiusBottomLeft="@dimen/headshot_radius">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_gravity="bottom|center_horizontal"
            android:src="@drawable/circle"
            android:tint="@{color}"/>

        <ImageView
            android:id="@+id/headshot_secondary_background"
            android:layout_width="@dimen/headshot_width"
            android:layout_height="@dimen/headshot_width"
            android:layout_gravity="bottom|center_horizontal"
            android:src="@drawable/circle"
            android:tint="@color/pink_50"
            android:visibility="invisible"/>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="bottom|center_horizontal"
            android:scaleType="centerCrop"
            app:imageUrl="@{imageUrl}"/>

    </com.example.kevin.fifastatistics.views.RoundedFrameLayout>

</layout>