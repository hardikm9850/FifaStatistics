<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <ImageView
        android:id="@+id/headshot_primary_background"
        android:layout_width="@dimen/headshot_width"
        android:layout_height="@dimen/headshot_width"
        android:layout_gravity="bottom|center_horizontal"
        android:src="@drawable/circle"/>

    <ImageView
        android:id="@+id/headshot_secondary_background"
        android:layout_width="@dimen/headshot_width"
        android:layout_height="@dimen/headshot_width"
        android:layout_gravity="bottom|center_horizontal"
        android:src="@drawable/circle"
        android:visibility="invisible"/>

    <TextView
        android:id="@+id/headshot_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:paddingTop="15dp"
        android:gravity="center"
        android:textSize="24dp"
        android:textColor="@color/white"
        tools:ignore="SpUsage" />

    <ImageView
        android:id="@+id/headshot_photo"
        android:layout_width="@dimen/headshot_width"
        android:layout_height="@dimen/headshot_height"
        android:layout_gravity="bottom|center_horizontal"
        android:scaleType="centerCrop"/>

</merge>