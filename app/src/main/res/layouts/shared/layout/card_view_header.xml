<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
        xmlns:android="http://schemas.android.com/apk/res/android">

    <data>
        <variable
            name="headerLeft"
            type="String"/>
        <variable
            name="headerRight"
            type="String"/>
        <variable
            name="headToHead"
            type="Boolean"/>

        <import type="android.view.View"/>
    </data>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/activity_horizontal_margin"
        android:layout_marginEnd="@dimen/activity_horizontal_margin">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="@dimen/record_header_vertical_padding"
            android:paddingBottom="@dimen/record_header_vertical_padding"
            android:orientation="horizontal"
            android:background="@color/cardViewBackground"
            tools:ignore="RtlSymmetry">

            <TextView
                android:id="@+id/header_left_text"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.5"
                android:paddingStart="@dimen/activity_horizontal_margin"
                android:gravity="center_vertical"
                android:text="@{headerLeft}"
                android:textAllCaps="@{headToHead}"
                style="@style/CardViewHeaderText"/>

            <TextView
                android:id="@+id/header_right_text"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.5"
                android:paddingEnd="@dimen/activity_horizontal_margin"
                android:gravity="center_vertical|end"
                android:text="@{headerRight}"
                android:textAllCaps="@{headToHead}"
                style="@style/CardViewHeaderText"/>

        </LinearLayout>

        <View style="@style/Divider"
            android:layout_gravity="bottom"
            android:layout_marginStart="@dimen/activity_horizontal_margin"
            android:layout_marginEnd="@dimen/activity_horizontal_margin"
            android:visibility="@{headToHead ? View.VISIBLE : View.GONE}"/>

    </FrameLayout>

</layout>