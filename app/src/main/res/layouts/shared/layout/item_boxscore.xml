<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
            name="summary"
            type="com.example.kevin.fifastatistics.models.databasemodels.match.MatchScoreSummary.TeamSummary"/>
        <variable
            name="viewModel"
            type="com.example.kevin.fifastatistics.viewmodels.card.BoxScoreViewModel"/>
        <variable
            name="teamImageUrl"
            type="String"/>
        <variable
            name="playerName"
            type="String"/>
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/activity_vertical_margin"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/team_imageview"
            android:layout_width="@dimen/match_team_logo_size"
            android:layout_height="@dimen/match_team_logo_size"
            android:layout_marginEnd="@dimen/activity_horizontal_margin"
            android:layout_marginTop="@dimen/activity_vertical_margin"
            android:layout_marginBottom="@dimen/activity_vertical_margin"
            android:layout_marginStart="@dimen/medium_margin"
            android:layout_gravity="center_vertical"
            android:scaleType="fitCenter"
            app:imageUrl="@{teamImageUrl}"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0"
            android:layout_marginEnd="@dimen/activity_horizontal_margin"
            android:layout_marginTop="@dimen/activity_vertical_margin"
            android:layout_marginBottom="@dimen/activity_vertical_margin"
            android:layout_gravity="center_vertical"
            android:gravity="center_vertical"
            android:textAppearance="@style/text_white_small"
            android:text="@{playerName}"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:layoutDirection="rtl">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/activity_vertical_margin"
                android:layout_marginEnd="@dimen/activity_vertical_margin"
                android:layout_marginTop="@dimen/activity_horizontal_margin"
                android:layout_marginBottom="@dimen/activity_horizontal_margin"
                android:layout_gravity="center_vertical"
                android:gravity="center_vertical"
                android:textAppearance="@style/text_bold_white_small"
                android:text="@{summary.fullTime}"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/activity_vertical_margin"
                android:layout_marginEnd="@dimen/activity_vertical_margin"
                android:layout_marginTop="@dimen/activity_horizontal_margin"
                android:layout_marginBottom="@dimen/activity_horizontal_margin"
                android:layout_gravity="center_vertical"
                android:gravity="center_vertical"
                android:textAppearance="@style/text_grey_small"
                android:text="@{summary.penalties}"
                android:visibility="@{viewModel.penaltiesVisibility}"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/activity_vertical_margin"
                android:layout_marginEnd="@dimen/activity_vertical_margin"
                android:layout_marginTop="@dimen/activity_horizontal_margin"
                android:layout_marginBottom="@dimen/activity_horizontal_margin"
                android:layout_gravity="center_vertical"
                android:gravity="center_vertical"
                android:textAppearance="@style/text_grey_small"
                android:text="@{summary.secondExtraTime}"
                android:visibility="@{viewModel.secondExtraTimeVisibility}"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/activity_vertical_margin"
                android:layout_marginEnd="@dimen/activity_vertical_margin"
                android:layout_marginTop="@dimen/activity_horizontal_margin"
                android:layout_marginBottom="@dimen/activity_horizontal_margin"
                android:layout_gravity="center_vertical"
                android:gravity="center_vertical"
                android:textAppearance="@style/text_grey_small"
                android:text="@{summary.firstExtraTime}"
                android:visibility="@{viewModel.firstExtraTimeVisibility}"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/activity_vertical_margin"
                android:layout_marginEnd="@dimen/activity_vertical_margin"
                android:layout_marginTop="@dimen/activity_horizontal_margin"
                android:layout_marginBottom="@dimen/activity_horizontal_margin"
                android:layout_gravity="center_vertical"
                android:gravity="center_vertical"
                android:textAppearance="@style/text_grey_small"
                android:text="@{summary.secondHalf}"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/activity_vertical_margin"
                android:layout_marginEnd="@dimen/activity_vertical_margin"
                android:layout_marginTop="@dimen/activity_horizontal_margin"
                android:layout_marginBottom="@dimen/activity_horizontal_margin"
                android:layout_gravity="center_vertical"
                android:gravity="center_vertical"
                android:textAppearance="@style/text_grey_small"
                android:text="@{summary.firstHalf}"/>

        </LinearLayout>

    </LinearLayout>

</layout>