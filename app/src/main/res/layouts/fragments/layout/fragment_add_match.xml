<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
            name="matchViewModel"
            type="com.example.kevin.fifastatistics.viewmodels.fragment.AddMatchFragmentViewModel"/>
        <import type="com.example.kevin.fifastatistics.R.drawable"/>
    </data>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorPrimaryDark"
        android:scrollbars="none">

        <android.support.v7.widget.Toolbar
            android:id="@+id/dialog_toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="@color/colorPrimary"
            android:elevation="@dimen/toolbar_elevation"
            android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
            app:popupTheme="@style/ThemeOverlay.AppCompat.Light">

        </android.support.v7.widget.Toolbar>

        <RelativeLayout
            android:id="@+id/match_header"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/dialog_toolbar"
            android:background="@color/cardViewHeaderBackground">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/left_image"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_alignParentStart="true"
                android:layout_marginTop="@dimen/activity_vertical_margin"
                android:layout_marginBottom="@dimen/activity_vertical_margin"
                android:layout_marginStart="@dimen/create_series_user_image_margin"
                app:civ_border_width="2dp"
                app:civ_border_color="#FFFFFF"
                android:src="@android:color/white"/>

            <ImageView
                android:layout_width="@dimen/team_item_logo_size"
                android:layout_height="@dimen/team_item_logo_size"
                android:layout_toEndOf="@id/left_image"
                android:layout_marginStart="@dimen/activity_horizontal_margin"
                android:layout_alignBottom="@id/left_image"
                android:layout_gravity="center_vertical"
                android:scaleType="fitCenter"
                android:onClick="@{v -> matchViewModel.onUserTeamClick()}"
                android:visibility="@{matchViewModel.teamVisibility}"
                app:imageUrl="@{matchViewModel.userTeamImageUrl}"
                app:defaultResId="@{drawable.ic_error_outline_white_24dp}"/>

            <ImageButton
                android:id="@+id/switch_sides_button"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:layout_centerHorizontal="true"
                android:layout_margin="@dimen/activity_vertical_margin"
                android:src="@drawable/ic_swap_horiz_white_24dp"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:contentDescription="@string/switch_sides"/>

            <de.hdodenhof.circleimageview.CircleImageView
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:id="@+id/right_image"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="@dimen/activity_vertical_margin"
                android:layout_marginBottom="@dimen/activity_vertical_margin"
                android:layout_marginEnd="@dimen/create_series_user_image_margin"
                app:civ_border_width="2dp"
                app:civ_border_color="#FFFFFF"
                android:src="@android:color/white"/>

            <ImageView
                android:layout_width="@dimen/team_item_logo_size"
                android:layout_height="@dimen/team_item_logo_size"
                android:layout_toStartOf="@id/right_image"
                android:layout_marginEnd="@dimen/activity_horizontal_margin"
                android:layout_gravity="center_vertical"
                android:layout_alignBottom="@id/right_image"
                android:scaleType="fitCenter"
                android:onClick="@{v -> matchViewModel.onOpponentTeamClick()}"
                android:visibility="@{matchViewModel.teamVisibility}"
                app:imageUrl="@{matchViewModel.opponentTeamImageUrl}"
                app:defaultResId="@{drawable.ic_error_outline_white_24dp}"/>

        </RelativeLayout>

        <com.example.kevin.fifastatistics.views.AddMatchListLayout
            android:id="@+id/add_match_list_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/match_header"
            android:layout_marginBottom="@dimen/activity_horizontal_margin" />

    </RelativeLayout>

</layout>